const mongoose = require("mongoose");
const { Schema } = mongoose;

const userSchema = new Schema(
	{
		username: {
			type: String,
		},
		email: {
			type: String,
		},
		secretToken: {
			type: String,
		},
		verified: {
			type: Boolean,
			default: false,
		},
		password: {
			type: String,
		},
		post: [
			{
				type: mongoose.Types.ObjectId,
				ref: "post",
			},
		],
	},
	{ timestamps: true },
);

const User = mongoose.model("user", userSchema);

module.exports = User;
